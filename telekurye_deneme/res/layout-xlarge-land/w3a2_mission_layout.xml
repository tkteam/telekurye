<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="100"
    android:background="@drawable/myshape"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/baslikyazisi"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="11"
        android:background="#ffffff"
        android:drawableTop="@drawable/telekurye_logo"
        android:gravity="center"
        android:text="BUGÜNKÜ  GÖREVLER"
        android:textColor="#000000"
        android:textSize="30dp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/missions_header__block"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:background="@drawable/head_shaper"
        android:layout_weight="6"
        android:padding="3dip"
        android:weightSum="100" >

        <TextView
            android:id="@+id/brosuryazisi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/baslikyazisi"
            android:layout_marginBottom="10dip"
            android:layout_marginTop="10dip"
            android:layout_weight="50"
            android:text=" Görev Adı "
            android:textColor="#000000"
            android:textSize="25dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/baslikyazisi"
            android:layout_marginBottom="10dip"
            android:layout_marginRight="20dip"
            android:layout_marginTop="10dip"
            android:layout_toRightOf="@+id/brosuryazisi"
            android:layout_weight="50"
            android:gravity="right"
            android:text=" Miktarı "
            android:textColor="#000000"
            android:textSize="25dp" />
    </LinearLayout>

    <ListView
        android:id="@+id/mission_list"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="78"
        android:divider="@drawable/list_divider"
        android:dividerHeight="3dip"
        android:listSelector="#ffffff" />

    <LinearLayout
        android:id="@+id/ak_status_bar_layout"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:background="@drawable/stausbarshape"
        android:layout_weight="5"
        android:gravity="center"
        android:weightSum="100" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:textSize="20dp"
            android:layout_margin="5dip"
            android:gravity="center"
            android:text="TerraLabs "/>
    </LinearLayout>

</LinearLayout>